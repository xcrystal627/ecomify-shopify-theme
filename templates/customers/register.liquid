<div id="register" class="container my-11">
    <div 
        class="bg-light px-6 py-6 mx-auto mb-6 rounded" 
        style="max-width: 720px;">
        <h1 class="h2 text-center mb-6">
            {{ 'customer.register.title' | t }}
        </h1>
        {% form 'create_customer' %}
            {{ form.errors | default_errors }}
            <div class="row mx-n2">
                <div class="col px-2">
                    <input 
                        class="form-control mb-3" 
                        name="customer[first_name]"
                        type="text"
                        placeholder="{{ 'customer.register.first_name' | t }}"
                        aria-label="{{ 'customer.register.first_name' | t }}"
                        autofocus
                        required>
                </div>
                <div class="col px-2">
                    <input 
                        class="form-control mb-3" 
                        name="customer[last_name]"
                        type="text"
                        placeholder="{{ 'customer.register.last_name' | t }}"
                        aria-label="{{ 'customer.register.last_name' | t }}"
                        required>
                </div>
            </div>
            <input 
                class="form-control mb-3" 
                name="customer[email]"
                type="email"
                placeholder="{{ 'customer.register.email' | t }}"
                aria-label="{{ 'customer.register.email' | t }}"
                required>
            <input 
                class="form-control mb-3" 
                name="customer[password]"
                type="password"
                placeholder="{{ 'customer.register.password' | t }}"
                aria-label="{{ 'customer.register.password' | t }}"
                required>
            <button type="submit" class="btn btn-primary w-100 mt-3 mb-1">
                {{ 'customer.register.submit' | t }}
            </button>
        {% endform %}
    </div>
    <div class="text-center">
        <h4 class="title text-center mb-4">
            {{ 'customer.register.have_account' | t }}
        </h4>
        <a class="btn btn-outline-primary mb-6" href="{{ routes.account_login_url }}">
            {{ 'customer.register.login' | t }}
        </a>
    </div>
</div>